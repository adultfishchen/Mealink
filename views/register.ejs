<%- include ("partials/header") %>

<script type="text/javascript">
      (document).ready(function(){
        ('.showPassword').on('change',function(){
          var isChecked = (this).prop('checked');
          if (isChecked) {
            ('.my-password').attr('type','text');
          } else {
            ('.my-password').attr('type','Password');
          }
        });
      });
  </script>


<div id="registerPage" class="container">
	<h1>Sign Up</h1>
</div>

<form action="/register" method="POST">
	<p><label for="username">Username</label>
	<input type="text" id="username" name="username" placeholder="Username" required
	minlength="4" maxlength="10" title="Username must be between 4 and 10 characters long"></p>
	
	<p><label for="email">Email</label>
	<input type="email" id="email" name="email" placeholder="Email Address" pattern ="^.+@mail\.ntust\.edu\.tw" title="Only National Taiwan University of Science and Technology can register on this site" required></p>
	
	<p><label for="password">Password</label>
	<input type="password" id="password" name="password" placeholder="Password" 
	pattern ="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,20}" 
	title="Password must between 6 and 20 characters and must include at least 
	1 number, 1 lowercase and 1 uppercase letter." class="my-password" required>
	<input type="checkbox" class="showPassword">Show Password</p>
	
	<p><label for="confirmPassword">Confirm Password</label>
	<input type="password" id="confirmPassword" name="confirmPassword" 
	placeholder="Confirm Password" class="my-password" required>
	<input type="checkbox" class="showPassword">Show Password</p>
	
	<button type="submit" class="btn btn-sm btn-success">Register Now</button>
</form>

<%- include ("partials/footer") %>